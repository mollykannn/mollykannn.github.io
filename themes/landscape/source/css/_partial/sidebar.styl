#sidebar
  border-left: 1px solid color-widget-background
  display: none 
  @media mq-normal
    flex: 0 0 300px
    display: initial 

.widget-wrap
  margin: 20px 15px
  border-bottom: 1px dashed color-widget-background

.widget-title
  font-size: 1.2em
  color: #999
  line-height: 1em
  font-weight: bold

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  color: color-sidebar-text
  padding: 20px 15px
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin-left: 15px
      list-style: disc
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

.tagcloud
  a
    margin-right: 5px
    display: inline-block

.icon_image
  max-width: 80%
  margin: 0px auto
  border-radius: 50%
  display: block
  margin-bottom: 15px

$icon-size
  font-family: font-icon
  font-size: 30px
  margin: 10px 5px 0 5px
  display: inline-block

.icon-nav
  margin: 5px 0
  text-align: center

.icon-nav a
  color: color-default
  cursor: pointer
  &:hover
    color: color-grey
    text-decoration: none

a.portfolio
  @extend $icon-size
  &:before
    content: "\f007"

a.github
  @extend $icon-size
  &:before
    content: "\f09b"

a.linkedin
  @extend $icon-size
  &:before
    content: "\f08c"

a.twitter
  @extend $icon-size
  &:before
    content: "\f099"