@import "nib"
@import "_variables"
@import "_util/mixin"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
  height: 100%

body
  background: color-background
  font-size: font-size
  font-family: font-sans
  -webkit-text-size-adjust: 100%

.container
  clearfix()
  max-width: 1220px
  width: 100%
  margin: 0 auto
  padding: 0
  height: 100%

.flex 
  display:flex
  flex-wrap: nowrap
  @media mq-tablet
    flex-wrap: wrap

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: 280px

if sidebar and sidebar isnt bottom
  #main
    overflow: hidden
    flex: 0 0 100%
    @media mq-normal
      flex: 1

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"
@import "_partial/categories_tags"

if sidebar
  @import "_partial/sidebar"