<div class="search-main">
    <h2>Search</h2>
    <form class="input-group" autocomplete="off">
        <input maxlength="80" type="search" id="search-field" name="s" class="search-field" placeholder="Search"
            required>
        <button class="search-button" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="15px" height="15px"
                viewBox="0 0 512 512">
                <path fill="currentColor"
                    d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z">
                </path>
            </svg></button>
    </form>
    <div id="searchContent" class="result">
        <hr class="line"/>
        <div class="resultRecord">找到 <span id="search-result-num"></span> 條結果</div>
        <div id="search-result-info" hidden></div>
        <div id="search-output"></div>
    </div>
</div>
<script src="<%- url_for('js/local-search.min.js') %>"></script>
<script>
    (function () {
        var searchNoResult = '';
        searchNoResult += '<div class="search-noresult">'
        searchNoResult += '在Google裡搜尋：<a href="https://www.google.com/search?&q=' + window.searchEscape(window.getParameterByName('s')) + '%20site:<%= config.url %>" target="_blank">' + window.searchEscape(window.getParameterByName('s')) + '</a></div>'
        window.searchFunc('<%= url_for("search.json") %>', searchNoResult);
    })();
</script>